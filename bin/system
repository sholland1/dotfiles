#!/bin/bash
lock () {
    i3lock-fancy-rapid 5 3
}

RESULT=$(echo -e "sleep\nlock\nlogout\nreboot\nshutdown" | fzf)
set -m
case $RESULT in
    sleep) manual-onedrive-sync; lock; sleep 0.5; systemctl suspend ;;
    lock) manual-onedrive-sync; lock ;;
    logout) manual-onedrive-sync; setxkbmap -option; who | cut -d' ' -f1 | xargs pkill -Kill -u ;;
    reboot) manual-onedrive-sync; systemctl reboot ;;
    shutdown) manual-onedrive-sync; systemctl poweroff ;;
esac
