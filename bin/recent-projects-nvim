#!/bin/bash

cd ~/Projects
RESULT=$(eza -D1 |
  while read -r dir; do
    date=0
    if [ -f "$dir/Session.vim" ]; then
      date=$(stat -c "%Y" "$dir/Session.vim")
    fi
    echo "$date $dir"
  done |
  sort -rn |
  cut -d' ' -f2- |
  fzf --preview 'eza -1 --color=always --icons=always --group-directories-first --git-ignore {}' \
      --preview-window='right,50%,<40(down,80%)')

if [ -z "$RESULT" ]; then
  exit
fi

cd "$RESULT" || exit
set -m
$TERM -T "$RESULT" -e open-in-editor &
disown
