#!/bin/sh
getdate () {
    date +'📆 %m/%d/%Y 🕒%_I:%M %p'
}

volume () {
    if [ `pulsemixer --get-mute` = 1 ]; then
        echo -n '🔇[M]'
        exit
    fi

    VOL=`pulsemixer --get-volume | cut -d' ' -f1`
    ICON=🔈
    if [ $VOL -gt 95 ]; then
        ICON=🔊
    elif [ $VOL -gt 40 ]; then
        ICON=🔉
    fi
    echo -n "$ICON[$VOL]"
}

mem () {
    free | awk '/^Mem/{printf "💾 %.2fG/%.1fG", ($3+$5)/1024/1024, $2/1024/1024}'
}

cpu () {
    #conky
    top -bn 2 -d 0.01\
        | grep '^%Cpu'\
        | tail -n 1\
        | awk '{printf "⏳%.0f%%", $2+$4+$6}'
}

up () {
    uptime -p\
        | sed -r 's/ ([a-z])[a-z]*,?/\1/g'\
        | sed 's/^up/⬆/'
}

music () {
    progress=`mpc | awk '/^\[/{print($1~/\[pa.*\]/?" ":" ")$3}'`
    track=`mpc current -f '%title% - %artist%'`
    [[ -z $progress && -z $track ]] || echo -n "$progress - $track :: "
}

echo -n " $(music)$(cpu) :: $(up) :: $(mem) :: $(volume) :: $(getdate)"
