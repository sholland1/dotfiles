#!/bin/sh

restart=true

while getopts ":n" opt; do
  case $opt in
    n)
      restart=false
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      exit 1
      ;;
  esac
done

systemctl --user stop onedrive.service
onedrive --sync

if $restart; then
  systemctl --user start onedrive.service
fi
