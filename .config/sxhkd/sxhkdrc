# Don't forget to use ';\' for multiline commands
XF86Audio{Raise,Lower}Volume
        amixer -D pulse set Master 1%{+,-};\
        set-status --sound
XF86AudioMute
        pulsemixer --toggle-mute;\
        set-status --sound
XF86Audio{Next,Prev,Stop,Play}
        mpc {next,prev,stop,toggle};\
        xsetroot -name "$(status)"
super + XF86AudioStop
        eject_disc

{_, @}Control_R
        sp2txt {start, stop}

super + {shift, alt} + e
        NAME='{e,kao}moji';\
        setsid $TERM -t "fzf: $NAME" -e \
          zsh -c "$NAME";\
        xdotool key Shift+Insert

super + {BackSpace,grave,c,d,p,shift + p,r,shift + x,w,XF86AudioPlay,shift + XF86AudioPlay}
        fuzzy_win {system,system,open-project,programs,fpacin,fyain,fpacrem,fkill,window-switcher,fsongs,fplaylists}

control + shift + {BackSpace,grave,w}
        fuzzy_win {system,system,window-switcher}

super + {f,s,u}
        $TERM -e "{$FILE,sysz,update}"

super + i
        $BROWSER

super + n
        feh --recursive --randomize --bg-fill ~/images/wallpaper

super + shift + z
        $TERM -e pizza-now

{_,shift + }button{8,9}
        xdotool key --clearmodifiers ctrl+{_,shift+}Page_{Down,Up}

Print
        flameshot gui

