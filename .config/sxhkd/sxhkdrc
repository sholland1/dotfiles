super + d
        dmenu_run
# i3-dmenu-desktop
XF86AudioRaiseVolume
        pulsemixer --change-volume +5
XF86AudioLowerVolume
        pulsemixer --change-volume -5
XF86AudioMute
        pulsemixer --toggle-mute

super + shift + s
        sleep 0.5; systemctl suspend
super + ctrl + r
        systemctl reboot
super + ctrl + s
        systemctl shutdown

button8
        xdotool key --clearmodifiers ctrl+Page_Down
button9
        xdotool key --clearmodifiers ctrl+Page_Up
shift + button8
        xdotool key --clearmodifiers ctrl+shift+Page_Down
shift + button9
        xdotool key --clearmodifiers ctrl+shift+Page_Up

Print
        scrot -z -q 80 -m -e 'mv $f ~/images/screenshots/'
alt + Print
        scrot -z -q 100 -u -e 'mv $f ~/images/screenshots/'
